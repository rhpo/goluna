# It's because I and J aren't being updated:

fn sort arr { 
	n = length(arr)  
	
	for i = 0; i < n; i++ { 
	
		for j = 0; j < n - 1; j = j + 1 { 
		
			if arr[j] > arr[j + 1] {

				io.print("1: (" + j + ")" + arr[j])
			
				temp = arr[j] 
				arr[j] = arr[j + 1]
				arr[j + 1] = temp

				io.print("2: (" + j + ")" + arr[j] + "\n\n")
				
			}
			
		}
	}

	arr

}

a = [1, 8, 3, 2, 4, 6, 5, 7]
a = sort(a) 
io.print(a)

